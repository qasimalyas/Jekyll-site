@import "variables"
@import "mixins"

// TYPOGRAPHY
h1, h2, h3, h4, h5, h6
	font-weight normal
	font-family altFontFamily1
	margin-bottom verticalSpacing

h1
	font-size 3.2rem

h2
	font-size 2.8rem

h3
	font-size 2.4rem

h4
	font-size 2rem

h5, h6
	font-size 1.8rem

a:hover
	text-decoration none

pre
	font-size 1rem

header span a
	font-size 2.8rem
	font-family altFontFamily3
	text-decoration none